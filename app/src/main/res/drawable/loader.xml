<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/progress"
        android:gravity="fill">
        <layer-list>
            <item>
                <rotate
                    android:drawable="@drawable/ic_findme_secondary"
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />
            </item>

            <item>
                <rotate
                    android:drawable="@drawable/ic_findme_primary"
                    android:fromDegrees="450"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="90" />
            </item>
        </layer-list>
    </item>
</layer-list>